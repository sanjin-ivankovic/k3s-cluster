# Ansible variables for K3s cluster: ${cluster_name}
# Generated by Terraform

---
# Cluster settings
k3s_cluster_name: ${cluster_name}
k3s_primary_master: ${master_ip}
k3s_enable_ha: ${enable_ha}

# Node configuration
k3s_master_nodes:
%{ for ip in master_ips ~}
  - ${ip}
%{ endfor ~}

k3s_worker_nodes:
%{ for ip in worker_ips ~}
  - ${ip}
%{ endfor ~}

# Access settings
ansible_user: ${ssh_user}
ansible_ssh_common_args: '-o StrictHostKeyChecking=no'
